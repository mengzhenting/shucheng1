/* pages/homepage/homepage.wxss */

.home {
  background-color: #21272e;
  padding-left: 50rpx;
  padding-top: 40rpx;
}

.top {
  height: 120rpx;
  width: 650rpx;
  margin: 0 auto;
  line-height: 100rpx;
}

.icon {
  color: #fff;
  float: left;
  font-size: 35rpx;
}

.iconf {
  color: #fff;
  float: right;
  font-size: 35rpx;
}

.shu {
  position: relative;
}

.iconfo {
  color: #9da3b4;
  position: absolute;
  top: 35rpx;
  left: 36rpx;
}

.search {
  height: 100rpx;
  width: 650rpx;
  background-color: #2d353d;
  border-radius: 50rpx;
  color: #fff;
  box-sizing: border-box;
  padding-left: 80rpx;
}

.classification {
  width: 650rpx;
  height: 140rpx;
  margin: 0 auto;
  line-height: 140rpx;
  display: flex;
  justify-content: space-between;
}

.ranking {
  color: #fff;
  font-size: 38rpx;
}

.see {
  color: #a2a8ba;
  font-size: 30rpx;
}

.arrow {
  color: #a2a8ba;
  font-size: 60rpx;
  vertical-align: middle;
}

.whole {
  height: 410rpx;
}

.imgs {
  height: 160rpx;
  width: 160rpx;
}

.type {
  color: #fff;
}

.swi {
  height: 220rpx !important;
  width: 160rpx !important;
  padding-right: 30rpx !important;
}

.tom {
  margin-left: 20rpx;
  width: 760rpx;
  border-bottom: 2rpx solid #9da3b4;
}

.classification-bottom {
  margin-right: 20rpx;
}

.release {
  border-bottom: 2rpx solid #9da3b4;
}

.new-release {
  height: 490rpx;
}

.future {
  width: 190rpx;
  height: 295rpx;
  padding-bottom: 15rpx;
}

.book-name {
  color: #fff;
  font-size: 30rpx;
}

.works {
  width: 190rpx !important;
  height: 490rpx !important;
  padding-right: 48rpx !important;
}

.writer-name {
  display: block;
  font-size: 25rpx;
  color: #5d637c;
}

.popular {
  height: 350rpx;
  padding: 70rpx 100rpx 20rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #5d637c;
}

.more {
  padding: 10rpx 25rpx 10rpx 25rpx;
  margin-right: 20rpx;
  border-radius: 40rpx;
  margin-bottom: 45rpx;
  display: inline-block;
  border: 2rpx solid transparent;
  color: #fff;
  font-size: 28rpx;
}

.popular-search {
  font-size: 35rpx;
  padding-bottom: 20rpx;
  color: #fff;
}

.end {
  height: 550rpx;
}

.details {
  width: 750rpx;
}

.details-title {
  width: 600rpx;
  height: 250rpx;
  background-color: #2a3039;
  text-align: left;
  border-radius: 40rpx;
}

.details-all {
  margin-top: 40rpx;
  width: 640rpx !important;
  position: relative;
  overflow: visible;
}

.details-future {
  position: absolute;
  top: -30rpx;
  left: 22rpx;
  float: left;
  width: 170rpx;
  height: 250rpx;
}

.details-right {
  float: right;
  width: 370rpx;
  padding: 20rpx 20rpx 0rpx 0;
}

.end-top {
  height: 120rpx;
  border-bottom: 2rpx solid #5d637c;
}

.dian {
  float: right;
}

.details-name {
  color: #fff;
  font-size: 40rpx;
}

.writer-details {
  display: block;
  color: #5d637c;
  font-size: 25rpx;
  margin-top: 10rpx;
}

.writer-about {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 25rpx;
  padding-top: 10rpx;
}
